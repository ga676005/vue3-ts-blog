{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@stores/*": [
                "src/stores/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@server/*": [
                "src/server/*"
            ],
            "@views/*": [
                "src/views/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "./auto-imports.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "cypress"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}